	true
}

default_hook_testbuild()
{
	cd "$1"
	if [ -x ./configure ]; then
		./configure
	fi
	if [ -r ./CMakeLists.txt ]; then
		cmake .
	fi
	if [ -r ./GNUmakefile -o -r ./makefile -o -r ./Makefile ]; then
		make
	fi
	if [ -x ./setup.py ]; then
		./setup.py --no-user-cfg build
	fi
}

